<odoo>
    <record id="policy_tree_view" model="ir.ui.view">
        <field name="name">Policy Tree</field>
        <field name="model">policy.arope</field>
        <field name="arch" type="xml">
            <tree >
                <field name="policy_num" string="Policy No" />
                <field name="product" string="Product"/>
                <field name="lob" string="LOB"/>
                <field name="rec_type"/>
                <field name="endorsement_no" />
                <field name="policy_seq"  />
                <field name="policy_serno"  />
                <field name="agent_code" string="Agent Code"/>
                <field name="customer_pin" />
                <field name="issue_date"/>
                <field name="first_inception_date" />
                <field name="inception_date" />
                <field name="expiry_date" />
                <field name="cur_code" />
                <field name="charges" />
                <field name="net_premium" string="Net Prem" sum="Net Prem"/>
                <field name="charges" />
                <field name="policy_cost" />
                <field name="fixed_stamps" />
                <field name="tax" />
                <field name="totoal_premium"  sum="Gross Prem"/>

            </tree>
        </field>
    </record>
    <record id="policy_form_view" model="ir.ui.view">
        <field name="name">Policy Form</field>
        <field name="model">policy.arope</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="create_end_requset" string="Endorsement Request" type="object"
                            class="oe_highlight"/>
                    <button name="create_renew_requset" string="Renewal Request" type="object"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <!-- <xpath expr="//link[@rel='stylesheet']" position="after">
                        <link rel="stylesheet" href="/travel_quotation/static/src/css/main.css"/>
                    </xpath>
                     -->
                    <div class="oe_title">
                        <label for="policy_num"/>
                        <h1>
                            <field name="policy_num"/>
                        </h1>
                    </div>
                    <group>
                        <field name="endorsement_no" />
                    </group>


                    <group >
                        <group>
                            <field name="customer_pin" string="Customer PIN"/>
                            <field name="agent_code" />
                            <field name="issue_date" />
                            <field name="first_inception_date" />
                            <field name="inception_date" />
                            <field name="expiry_date" />
                        </group>
                        <group>
                            <field name="lob" />
                            <field name="product"/>
                            <field name="policy_serno"  />
                            <field name="policy_seq" />
                            <field name="rec_type" />
                            <field name="introdagt" />
                        </group>
                    </group>

                    <notebook>
                        <page string="Financial INFO">
                            <group>
                                <group>
                                    <field name="cur_code"/>
                                    <field name="net_premium"/>
                                </group>
                                <group>

                                    <field name="charges" />
                                    <field name="policy_cost" />
                                    <field name="fixed_stamps" />
                                    <field name="tax" />
                                </group>
                                <field name="totoal_premium"  sum="Gross Prem"/>

                            </group>

                            <!--                            <field name="risk_ids" nolabel="1"-->
                        </page>
                    </notebook>

                </sheet>
            </form>
        </field>
    </record>
    <record id="request_form_view" model="ir.ui.view">
        <field name="name">Policy Form</field>
        <field name="model">policy.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar"/>
                     <button name="submit" string="Submit" type="object"
                            class="oe_highlight"/>
                     <button name="issue" string="issue" type="object"
                            class="oe_highlight"/>

                </header>
                <sheet>

                    <group >
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="policy" readonly="1"/>
                            <field name="product" readonly="1"/>
                            <field name="type" />
                            <field name="end_reason" attrs="{'invisible': [('type', '=', 'renew')]}"/>

                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
    <record id="request_tree_view" model="ir.ui.view">
        <field name="name">Rquests Tree</field>
        <field name="model">policy.request</field>
        <field name="arch" type="xml">
            <tree >
                <field name="name"/>
                <field name="policy"/>
                <field name="product"/>
                <field name="type" />
                <field name="create_uid" string="Requested By" />
            </tree>
        </field>
    </record>
    <record id="request_view_search" model="ir.ui.view">
        <field name="name">requests</field>
        <field name="model">policy.request</field>
        <field name="arch" type="xml">
            <search string="Request">
                <group expand="0" string="Group By">
                    <filter string="State" name="groupby_state" context="{'group_by': 'state'}"/>
<!--                    <filter string="State" name="groupby_sub_state" context="{'group_by': 'sub_state'}"/>-->
                </group>
            </search>
        </field>
    </record>
    <record id="request_action_renew" model="ir.actions.act_window">
        <field name="name">Requests</field>
        <field name="res_model">policy.request</field>
        <field name="view_mode">tree,form,kanban,pivot</field>
        <field name="context">{'search_default_groupby_state': 1}</field>
        <!--        <field name="context">{"search_default_active":1}</field>-->
        <field name='domain'>[('type','=','renew')]</field>

        <field name="view_id" ref="request_tree_view"/>
    </record>
    <record id="request_action_end" model="ir.actions.act_window">
        <field name="name">Requests</field>
        <field name="res_model">policy.request</field>
        <field name="view_mode">tree,form,kanban,pivot</field>
        <field name="context">{'search_default_groupby_state': 1}</field>
        <!--        <field name="context">{"search_default_active":1}</field>-->
        <field name='domain'>[('type','=','end')]</field>

        <field name="view_id" ref="request_tree_view"/>
    </record>
    <record id="seq_request" model="ir.sequence">
        <field name="name">request</field>
        <field name="code">req</field>
        <field name="prefix">REQ /</field>
        <field name="padding">4</field>
        <!--<field name="company_id" eval="False"/>-->
    </record>

    <record id="policy_form_action" model="ir.actions.act_window">
        <field name="name">Policy</field>
        <field name="res_model">policy.arope</field>
        <field name="view_mode">tree,form,kanban,pivot</field>
        <!--        <field name="context">{"search_default_active":1}</field>-->
        <field name="view_id" ref="policy_tree_view"/>
        <field name="context">{'create': False,'edit':False}</field>
        <!--        <field name="target">inline</field>-->


    </record>
